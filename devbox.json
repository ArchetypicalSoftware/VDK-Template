{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.12.0/.schema/devbox.schema.json",
  "packages": [
    "kind@latest",
    "fluxcd@latest",
    "docker@latest",
    "jq@latest"
  ],
  "env": {
    "PATH": "./.bin:$PATH"
  },
  "shell": {
    "init_hook": [
      "echo 'Welcome to Vega Dev Shell!'",
      "echo 'Docs: https://vdk.sh | GitHub: https://github.com/ArchetypicalSoftware/VDK-Template'",
      "alias vega='./.bin/vega'",
      "./init.sh"
    ],
    "scripts": {
      "test": [
        "echo \"Error: no test specified\" && exit 1"
      ]
    }
  }
}
